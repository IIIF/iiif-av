
{
	"id": "http://example.org/iiif/canvas/1",
	"type": "Canvas",
	"label": "Associate Video with WebVTT subtitle file",
	"description": "Expected behavior is to render one of the videos, and the subtitles from the VTT OR the annotations that are equivalent to them ( current ore:similarTo). This makes the VTT easy to use in simple cases, and allows more complex and controlled layouts possible via annotations without ambiguity. In the presence of both, the client SHOULD use the annotations. ",
	"height": 1000,
	"width": 1000,
	"duration": 100,
	"content": [
		{
			"id": "...",
			"type": "AnnotationPage",
			"items": [
				{
					"id": "...",
					"type": "Annotation",
					"motivation": "painting",
					"body": [
						{
							"type": "Choice",
							"choiceHint": "client",
							"items": [
								{
									"id": "http://example.org/foo.mp4",
									"type": "Video"
								},
								{
									"id": "http://example.org/foo.avi",
									"type": "Video"
								}
							]
						},
						{
							"id": "http://example.org/foo.vtt",
							"type": "Text",
							"format": "text/vtt"
						}
					],
					"target": "http://example.org/iiif/canvas/1"
				}
			]
		},
		{
			"id": "...",
			"type": "AnnotationPage",
			"ore:similarTo": "http://example.org/foo.vtt",
			"within": {
				"id": "...",
				"type": "AnnotationCollection",
				"label": "Captions, not Subtitles",
			},
			"items": [
				{
					"id": "...",
					"type": "Annotation",
					"motivation": "painting",
					"body": {
						"type": "TextualBody",
						"value": "This is the __Caption__ for t=10,15"
					},
					"target": "http://example.org/iiif/canvas/1#t=10,15&xywh=800,400,100,20"
				}
			]
		}
	]
}
